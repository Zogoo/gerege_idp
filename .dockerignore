# See https://docs.docker.com/engine/reference/builder/#dockerignore-file for more about ignoring files.

# Ignore git directory.
/.git/
/.gitignore
.gitattributes

# Ignore bundler config.
/.bundle

# Ignore all environment files.
/.env*
!.env.example

# Ignore all default key files.
/config/master.key
/config/credentials/*.key

# Ignore all logfiles and tempfiles.
/log/*
/tmp/*
!/log/.keep
!/tmp/.keep

# Ignore pidfiles, but keep the directory.
/tmp/pids/*
!/tmp/pids/.keep

# Ignore storage (uploaded files in development and any SQLite databases).
/storage/*
!/storage/.keep
/tmp/storage/*
!/tmp/storage/.keep

# Ignore assets.
/node_modules/
/app/assets/builds/*
!/app/assets/builds/.keep
/public/assets

# Ignore CI service files.
/.github

# Ignore Kamal files.
/config/deploy*.yml
/.kamal

# Ignore development files
/.devcontainer

# Ignore Docker-related files
/.dockerignore
/Dockerfile*
docker-compose*

# Documentation
README.md
docs/

# Logs
*.log

# Temporary files
.tmp/

# Database
db/*.sqlite3
db/*.sqlite3-*

# Node modules (will be installed in container)
node_modules/

# Bundle cache (will be installed in container)
vendor/bundle/

# Coverage reports
coverage/

# Test files
spec/
test/

# IDE files
.vscode/
.idea/
*.swp
*.swo

# OS files
.DS_Store
Thumbs.db

# Build artifacts
public/assets/
public/packs/
public/vite/

# Cache
.cache/
