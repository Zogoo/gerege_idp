<div class="max-w-2xl mx-auto">
  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900 mb-1"><%= t('.title') %></h1>
    <p class="text-gray-500 text-base">Update your OAuth application details below.</p>
    <%= link_to t('doorkeeper.applications.buttons.back', default: 'Back to applications'), oauth_applications_path, class: 'inline-block mt-4 text-indigo-600 hover:underline text-sm' %>
  </div>
  <div class="bg-white shadow rounded-lg p-8">
    <%= render 'form', application: @application %>
  </div>
</div>
