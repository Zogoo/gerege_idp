<div class="max-w-5xl mx-auto">
  <div class="flex items-center justify-between border-b border-gray-200 mb-8 pb-4">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= t('.title') %></h1>
      <p class="text-gray-500 mt-1 text-base">Manage your OAuth applications. Create, edit, or remove applications as needed.</p>
    </div>
    <%= link_to new_oauth_application_path, class: 'inline-flex items-center px-5 py-2.5 bg-indigo-600 border border-transparent rounded-md font-semibold text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 shadow transition' do %>
      <svg class="w-5 h-5 mr-2 -ml-1" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4"/></svg>
      <span><%= t('.new') %></span>
    <% end %>
  </div>

  <% if @applications.empty? %>
    <div class="bg-white shadow rounded-lg p-8 flex flex-col items-center justify-center text-center">
      <svg class="w-12 h-12 text-gray-300 mb-4" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M9 17v-2a4 4 0 018 0v2m-4-4a4 4 0 100-8 4 4 0 000 8z"/></svg>
      <h2 class="text-xl font-semibold text-gray-700 mb-2">No applications found</h2>
      <p class="text-gray-500 mb-4">Get started by creating your first OAuth application.</p>
      <%= link_to t('.new'), new_oauth_application_path, class: 'inline-flex items-center px-4 py-2 bg-indigo-600 border border-transparent rounded-md font-semibold text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 shadow transition' %>
    </div>
  <% else %>
    <div class="overflow-x-auto mt-6">
      <table class="min-w-full divide-y divide-gray-200 bg-white shadow rounded-lg">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('.name') %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('.callback_url') %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('.confidential') %></th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider"><%= t('.actions') %></th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100">
          <% @applications.each_with_index do |application, idx| %>
            <tr id="application_<%= application.id %>" class="hover:bg-gray-50 <%= idx.even? ? 'bg-white' : 'bg-gray-50' %>">
              <td class="px-6 py-4 whitespace-nowrap align-middle font-medium text-gray-900">
                <%= link_to application.name, oauth_application_path(application), class: 'hover:underline' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap align-middle text-gray-700">
                <%= simple_format(application.redirect_uri) %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap align-middle">
                <span class="inline-flex items-center px-2 py-1 rounded text-xs font-semibold <%= application.confidential? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
                  <%= application.confidential? ? t('doorkeeper.applications.index.confidentiality.yes') : t('doorkeeper.applications.index.confidentiality.no') %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap align-middle flex gap-2">
                <%= link_to edit_oauth_application_path(application), class: 'inline-flex items-center px-2 py-1 text-blue-600 hover:text-blue-800 rounded transition', title: t('doorkeeper.applications.buttons.edit') do %>
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M15.232 5.232l3.536 3.536M9 11l6 6M3 21h6l11-11a2.828 2.828 0 00-4-4L5 17v4z"/></svg>
                <% end %>
                <%= render 'delete_form', { application: application, submit_btn_css: 'inline-flex items-center px-2 py-1 text-red-600 hover:text-red-800 rounded transition' } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
