<div class="min-h-screen bg-gradient-to-br from-blue-50 via-white to-indigo-50 flex items-center justify-center p-4">
  <div class="w-full max-w-md">
    <!-- Header -->
    <div class="text-center mb-8">
      <div class="inline-flex items-center justify-center w-16 h-16 bg-indigo-100 rounded-full mb-4">
        <svg class="w-8 h-8 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
        </svg>
      </div>
      <h1 class="text-2xl font-bold text-gray-900 mb-2">
        <%= t('.title') %>
      </h1>
      <p class="text-gray-600">
        Authorize this application to access your account
      </p>
    </div>

    <!-- Main Card -->
    <div class="bg-white rounded-2xl shadow-xl border border-gray-100 overflow-hidden">
      <!-- App Info -->
      <div class="p-6 border-b border-gray-100">
        <div class="flex items-center space-x-4">
          <div class="flex-shrink-0">
            <div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-xl flex items-center justify-center">
              <span class="text-white font-bold text-lg">
                <%= @pre_auth.client.name.first.upcase %>
              </span>
            </div>
          </div>
          <div class="flex-1 min-w-0">
            <h2 class="text-lg font-semibold text-gray-900 truncate">
              <%= @pre_auth.client.name %>
            </h2>
            <p class="text-sm text-gray-500">
              wants to access your account
            </p>
          </div>
        </div>
      </div>

      <!-- Permissions -->
      <% if @pre_auth.scopes.count > 0 %>
        <div class="p-6 border-b border-gray-100">
          <h3 class="text-sm font-medium text-gray-900 mb-3">
            This app will be able to:
          </h3>
          <ul class="space-y-3">
            <% @pre_auth.scopes.each do |scope| %>
              <li class="flex items-start space-x-3">
                <div class="flex-shrink-0 mt-0.5">
                  <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                </div>
                <span class="text-sm text-gray-700 capitalize">
                  <% begin %>
                    <%= t scope, scope: [:doorkeeper, :scopes], default: scope.humanize %>
                  <% rescue %>
                    <%= scope.humanize %>
                  <% end %>
                </span>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Action Buttons -->
      <div class="p-6 space-y-4">
        <!-- Authorize Button -->
        <%= form_tag oauth_authorization_path, method: :post, class: "w-full" do %>
          <%= hidden_field_tag :client_id, @pre_auth.client.uid, id: nil %>
          <%= hidden_field_tag :redirect_uri, @pre_auth.redirect_uri, id: nil %>
          <%= hidden_field_tag :state, @pre_auth.state, id: nil %>
          <%= hidden_field_tag :response_type, @pre_auth.response_type, id: nil %>
          <%= hidden_field_tag :response_mode, @pre_auth.response_mode, id: nil %>
          <%= hidden_field_tag :scope, @pre_auth.scope, id: nil %>
          <%= hidden_field_tag :code_challenge, @pre_auth.code_challenge, id: nil %>
          <%= hidden_field_tag :code_challenge_method, @pre_auth.code_challenge_method, id: nil %>
          <%= submit_tag "Authorize", 
              class: "w-full bg-indigo-600 hover:bg-indigo-700 border border-transparent rounded-md font-semibold text-white py-3 px-4 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 shadow transition" %>
        <% end %>
        
        <!-- Deny Button -->
        <%= form_tag oauth_authorization_path, method: :delete, class: "w-full" do %>
          <%= hidden_field_tag :client_id, @pre_auth.client.uid, id: nil %>
          <%= hidden_field_tag :redirect_uri, @pre_auth.redirect_uri, id: nil %>
          <%= hidden_field_tag :state, @pre_auth.state, id: nil %>
          <%= hidden_field_tag :response_type, @pre_auth.response_type, id: nil %>
          <%= hidden_field_tag :response_mode, @pre_auth.response_mode, id: nil %>
          <%= hidden_field_tag :scope, @pre_auth.scope, id: nil %>
          <%= hidden_field_tag :code_challenge, @pre_auth.code_challenge, id: nil %>
          <%= hidden_field_tag :code_challenge_method, @pre_auth.code_challenge_method, id: nil %>
          <%= submit_tag "Deny", 
              class: "w-full bg-white border border-gray-300 text-gray-700 hover:bg-gray-50 rounded-md font-semibold py-3 px-4 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 shadow transition" %>
        <% end %>
      </div>
    </div>

    <!-- Footer -->
    <div class="text-center mt-6">
      <p class="text-xs text-gray-500">
        By authorizing, you allow this application to access your account information.
        <br>
        You can revoke access at any time from your account settings.
      </p>
    </div>
  </div>
</div>
