<% content_for :title, "Users" %>

<h1>Users</h1>

<div id="api_v1_users">
  <% @api_v1_users.each do |user| %>
    <%= render partial: 'api/v1/users/user', locals: { user: user } %>
    <p>
      <%= link_to "Show this user", api_v1_user_path(user) %>
    </p>
  <% end %>
</div>

<%= link_to "New user", new_api_v1_user_path %>
