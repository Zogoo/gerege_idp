<%# Header Bar %>
<div class="bg-white shadow">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center h-16">
      <%# Breadcrumb %>
      <div class="flex items-center">
        <nav class="flex" aria-label="Breadcrumb">
          <ol class="inline-flex items-center space-x-2">
            <li>
              <%= link_to "Home", root_path, class: "text-gray-500 hover:text-gray-700" %>
              <span class="mx-2 text-gray-400">/</span>
            </li>
            <li class="text-gray-900 font-medium">My Page</li>
          </ol>
        </nav>
      </div>

      <%# User Menu Dropdown %>
      <div class="relative" data-controller="menu">
        <button type="button" 
                class="flex items-center space-x-2 text-gray-700 hover:text-gray-900 focus:outline-none"
                data-action="click->menu#toggle">
          <div class="w-8 h-8 bg-indigo-100 rounded-full flex items-center justify-center">
            <span class="text-indigo-600 font-semibold">
              <%= current_user.email.first.upcase %>
            </span>
          </div>
          <span class="text-sm font-medium"><%= current_user.email %></span>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
          </svg>
        </button>

        <%# Menu %>
        <div class="hidden absolute right-0 mt-2 w-48 bg-white rounded-md shadow-lg py-1 ring-1 ring-black ring-opacity-5"
             data-menu-target="menu">
          <%= link_to "Profile", "#", class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
          <%= link_to "Settings", "#", class: "block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
          <%= button_to "Sign out", destroy_user_session_path, 
              method: :delete, 
              class: "w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" %>
        </div>
      </div>
    </div>
  </div>
</div>

<%# SSO Applications Grid %>
<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold text-gray-900 mb-8">My SSO Applications</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
    <% SamlIdpRails::SamlSpConfig.all.each do |app| %>
      <%= link_to saml_idp_rails.saml_sp_config_path(uuid: app.uuid), 
          class: "group relative bg-white rounded-lg shadow-md hover:shadow-lg transition-shadow duration-200 overflow-hidden" do %>
        <div class="p-6">
          <%# App Icon %>
          <div class="w-16 h-16 mx-auto mb-4 bg-indigo-100 rounded-full flex items-center justify-center">
            <span class="text-2xl text-indigo-600 font-semibold">
              <%= app.display_name.first.upcase %>
            </span>
          </div>
          
          <%# App Name %>
          <h3 class="text-lg font-semibold text-gray-900 text-center mb-2">
            <%= app.display_name %>
          </h3>
          
          <%# App Description %>
          <p class="text-sm text-gray-500 text-center">
            Click to access <%= app.display_name %>
          </p>
        </div>
        
        <%# Hover Effect %>
        <div class="absolute inset-0 bg-indigo-50 opacity-0 group-hover:opacity-100 transition-opacity duration-200"></div>
      <% end %>
    <% end %>
  </div>
</div>
